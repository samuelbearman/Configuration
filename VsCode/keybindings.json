[
  {
    // Shift to next terminal
    "key": "ctrl+shift+a",
    "command": "workbench.action.terminal.focusNext",
    "when": "terminalFocus"
  },
  {
    // Shift to previous terminal
    "key": "ctrl+shift+b",
    "command": "workbench.action.terminal.focusPrevious",
    "when": "terminalFocus"
  },
  {
    // Toggle the terminal pane
    "key": "ctrl+shift+j",
    "command": "workbench.action.togglePanel"
  },
  {
    // Toggle to editor from terminal
    "key": "ctrl+j",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "terminalFocus"
  },
  {
    // Toggle to terminal from editor
    "key": "ctrl+j",
    "command": "workbench.action.terminal.focus",
    "when": "editorTextFocus"
  },
  {
    // Create a new terminal in pane
    "key": "ctrl+shift+n",
    "command": "workbench.action.terminal.new",
    "when": "terminalFocus"
  },
  {
    // Disable exisitng keybind
    "key": "ctrl+shift+n",
    "command": "-workbench.action.newWindow"
  },
  {
    // Focus back to the editor when viewing the the file listing
    "key": "ctrl+e",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "explorerViewletFocus"
  },
  {
    // Focus back to the file listing from the editor
    "key": "ctrl+e",
    "command": "workbench.files.action.focusFilesExplorer",
    "when": "editorTextFocus"
  },
  {
    // Create a new file in the file explorer
    "key": "n",
    "command": "explorer.newFile",
    "when": "filesExplorerFocus && !inputFocus"
  },
  {
    // Create a new folder in the file explorer
    "key": "shift+n",
    "command": "explorer.newFolder",
    "when": "explorerViewletFocus"
  },
  {
    // Delete a file in the file explorer
    "key": "d",
    "command": "deleteFile",
    "when": "filesExplorerFocus && !inputFocus"
  },
  {
    // Disable editor search key 
    "key": "ctrl+shift+f",
    "command": "-workbench.action.findInFiles"
  },
  {
    // Disable editor search key 
    "key": "ctrl+shift+h",
    "command": "-workbench.action.replaceInFiles"
  },
  {
    // toggle to next pane
    "key": "ctrl+shift+l",
    "command": "workbench.action.terminal.focusNextPane",
    "when": "terminalFocus"
  },
  {
    // toggle to next pane
    "key": "ctrl+shift+h",
    "command": "workbench.action.terminal.focusPreviousPane",
    "when": "terminalFocus"
  },
  {
    // split pane
    "key": "ctrl+shift+v",
    "command": "workbench.action.terminal.split",
    "when": "terminalFocus"
  },
  {
    // resize up
    "key": "ctrl+shift+up",
    "command": "workbench.action.terminal.resizePaneUp",
    "when": "terminalFocus"
  },
  {
    // resize down
    "key": "ctrl+shift+down",
    "command": "workbench.action.terminal.resizePaneDown",
    "when": "terminalFocus"
  }
]