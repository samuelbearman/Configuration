{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "style": "plain",
          "foreground": "#FFFFFF",
          "template": "{{ .UserName }}@{{ .HostName }} ",
          "type": "session"
        }, 
        {
          "type": "path",
          "style": "plain",
          "foreground": "#FFFFFF",
          "template": "{{.PWD}} ",
          "properties": {
            "style": "full",
            "home_icon": "~"
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#FFFFFF",
          "template": "% "
        }
      ]
    }
  ],
  "version": 3
}